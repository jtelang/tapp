<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/grid_row_height"
    android:padding="@dimen/margine_normal" >

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/txtBuy"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margine_small"
        android:background="@drawable/box_border"
        android:gravity="center"
        android:minWidth="60dp"
        android:padding="@dimen/margine_small"
        android:text="@string/buy" />

</RelativeLayout>